<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:drawable/screen_background_dark_transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:text="Цифра дня"
        android:textAlignment="center"
        android:id="@+id/dayNumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:id="@+id/numberOfThatDay"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/dayNumber"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/informAboutCifra"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/numberOfThatDay"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:id="@+id/authorOfNumber"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:id="@+id/loading"
        android:text="Грузим..."
        android:textColor="@android:color/white"
        android:textSize="30dp"/>
</LinearLayout>